<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="test.com.mh.base.persist.impl.myBatisUserMapper">
	<select id="getUserById" parameterType="int" 
			resultType="test.com.mh.base.persist.impl.User">
		select * from users_t where id=#{id}
	</select>
	<insert id="addUser" parameterType="test.com.mh.base.persist.impl.User">
		insert into users_t(name,age) values (#{name},#{age})
	</insert>
	<delete id="deleteUser" parameterType="int">
		delete from users_t where id=#{id}
	</delete>
	<update id="updateUser" parameterType="test.com.mh.base.persist.impl.User">
		update users_t set name=#{name},age=#{age} where id=#{id}
	</update>
	<select id="getAllUserList" resultType="test.com.mh.base.persist.impl.User">
		select * from users_t
	</select>
</mapper>